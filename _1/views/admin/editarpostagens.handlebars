{{#each erros}}
    <div class="alert alert-danger">{{texto}}</div>
{{else}}

{{/each}}

<div class="card">
    <div class="card-body">
        <h4>Editar Postagem</h4><br>
        <form action="/admin/postagens/editar" method="POST">
            <input type="hidden" value="{{postagem._id}}" name="id">
            <label for="titulo">Titulo</label>
            <input type="text" name="titulo" id="titulo" class="form-control" value="{{postagem.titulo}}" required><br>
            <label for="slug">Slug</label>
            <input type="text" name="slug" id="slug" class="form-control" value="{{postagem.slug}}" required><br>
            <label for="descricao">Descricão</label>
            <input type="text" name="descricao" id="descricao" class="form-control" value="{{postagem.descricao}}" required><br>
            <label for="conteudo">Conteúdo</label>
            <textarea class="form-control" name="conteudo" id="" cols="30" rows="10"  required>{{postagem.conteudo}}</textarea><br>
            <label for="categoria">Categoria</label>
            <select name="categoria" class="custom-select">
                {{#each categorias}}
                    <option value="{{_id}}">{{nome}}</option>
                {{else}}
                    <option value="0">Nenhuma categoria registrada.</option>
                {{/each}}
            </select><br>
            <button class="btn btn-success mt-4" type="submit">Atualizar</button>
        </form>
    </div>
</div>

